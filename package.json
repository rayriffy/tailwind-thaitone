{
  "name": "tailwind-thaitone",
  "version": "1.0.3",
  "author": "Phumrapee Limpianchop <mail@rayriffy.com>",
  "description": "Thaitone colors for Tailwind CSS",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "url": "git+https://github.com/rayriffy/tailwind-thaitone"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "dev": "pnpm run build --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "prepare": "pnpm build"
  },
  "keywords": [
    "tailwindcss",
    "tailwindcss-plugin",
    "thai",
    "colors"
  ],
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@tsconfig/node18": "18.2.0",
    "tailwindcss": "^3.4.3",
    "tsup": "7.1.0",
    "typescript": "5.1.6",
    "vitest": "0.32.2"
  }
}
